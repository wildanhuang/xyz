<%= form_for @resource, :url => url, :html => {:class => "form-horizontal col-sm-12 col-sm-offset-1"} do |f| %>
<br><br>
  <div class="form-group">
    <label for="resource_name" class="col-sm-2 control-label">Resource Name</label>
    <div class="col-sm-3">
      <%= f.text_field :name, :placeholder => "Enter Resource Name", :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label for="quantity" class="col-sm-2 control-label">Quantity</label>
    <div class="col-sm-3">
      <%= f.text_field :quantity, :placeholder => "Enter Resource Quantity per KG", :class => "form-control" %>
    </div>
  </div>  

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-12">
      <%= f.submit 'Save', :class => "btn btn-default" %>
    </div>
  </div>
<% end %>