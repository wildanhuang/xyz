<%= form_for @product, :url => products_path, :html => {:class => "form-horizontal col-sm-12 col-sm-offset-1"} do |f| %>
<br><br>
  <div class="form-group">
    <label for="product_name" class="col-sm-3 control-label">Product Name</label>
    <div class="col-sm-7">
      <%= f.text_field :name, :placeholder => "Enter Product Name", :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="quantity" class="col-sm-3 control-label">Quantity</label>
    <div class="col-sm-7">
      <%= f.text_field :name, :placeholder => "Enter Product Quantity per KG", :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="price" class="col-sm-3 control-label">Price</label>
      <div class="col-sm-7">
        <div class="input-group">
          <div class="input-group-addon">Rp</div>
            <%= f.text_field :price, :placeholder => "Amount", :class => "form-control" %>
          <div class="input-group-addon">.00</div>
        </div>
      </div>
  </div>     
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-12">
      <%= f.submit 'Add', :class => "btn btn-default" %>
    </div>
  </div>
<% end %>
<nav>
  <ul class="pagination" >
    <li>
      <a href="#" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    <li><a href="#">1</a></li>
    <li><a href="#">2</a></li>
    <li><a href="#">3</a></li>
    <li><a href="#">4</a></li>
    <li><a href="#">5</a></li>
    <li>
      <a href="#" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
    <div class="col-lg-4">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Search for...">
        <span class="input-group-btn">
          <button class="btn btn-default" type="button">
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
          </button>
        </span>
      </div><!-- /input-group -->
    </div>
  </ul>
</nav>
<div class="table-responsive">
  <table class="table table-bordered">
    <caption></caption>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.id %></td>
          <td><%= product.name %></td>
          <td><%= product.quantity %></td>
          <td><%= product.price %></td>
          <td><a href="update_produk.html">Update</a> &nbsp <a href="">Delete</a></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>